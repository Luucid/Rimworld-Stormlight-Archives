    <ResearchProjectDef>
        <defName>whtwl_Research_SprenTrapping</defName>
        <label>Spren trapping</label>
        <description>The study of trapping spren in cut gems.</description>
        <tab>whtwl_StormlightArchives</tab>
        <baseCost>350</baseCost>
        <techLevel>Industrial</techLevel>
        <prerequisites>
            <li>whtwl_Research_BasicSprenology</li>
            <li>whtwl_GemCutting</li>
        </prerequisites>
        <researchViewX>5.00</researchViewX>
        <researchViewY>1.80</researchViewY>
