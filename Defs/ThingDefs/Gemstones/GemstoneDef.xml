<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef Name="whtwl_GemstoneBase" ParentName="ResourceBase" Abstract="True">
        <defName>whtwl_RawGemstone</defName>
        <label>Raw Gemstone</label>
        <description>Something about Gemstones.</description>
        <soundInteract>Silver_Drop</soundInteract>
        <soundDrop>Silver_Drop</soundDrop>
        <useHitPoints>false</useHitPoints>
        <healthAffectsPrice>false</healthAffectsPrice>
        <deepCommonality>0.5</deepCommonality>
        <deepCountPerPortion>8</deepCountPerPortion>
        <deepLumpSizeRange>1~4</deepLumpSizeRange>
        <tickerType>Normal</tickerType>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
        <statBases>
            <Mass>0.008</Mass>
        </statBases>
        <stackLimit>25</stackLimit>
        <smallVolume>false</smallVolume>
        <burnableByRecipe>false</burnableByRecipe>
        <smeltable>false</smeltable>
        <possessionCount>1</possessionCount>
        <stuffProps>
            <commonality>0.00</commonality>
            <categories>
                <li>Metallic</li>                      <!-- make custom category -->
            </categories>
            <constructEffect>ConstructMetal</constructEffect>
            <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
            <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
            <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
            <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Metal</soundImpactMelee>
        </stuffProps>
    </ThingDef>


    <!-- CUT GEM MAKER -->
    <RecipeDef Name="whtwl_MakeCutGemsBase" Abstract="True">
        <jobString>Cutting gems from raw gems.</jobString>
        <workAmount>1600</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>CutStone</effectWorking>
        <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
        <targetCountAdjustment>1</targetCountAdjustment>
        <workSkill>Crafting</workSkill> <!-- custom skill -->
        <workSkillLearnFactor>0</workSkillLearnFactor>
        <recipeUsers>
            <li>whtwl_TableGemcutting</li>
        </recipeUsers>
    </RecipeDef>

    <!-- SPHERE  MAKER -->
    <RecipeDef Name="whtwl_MakeSphere" Abstract="True">
        <jobString>Making spheres from cut gems.</jobString>
        <workAmount>1600</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>CutStone</effectWorking>
        <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
        <targetCountAdjustment>1</targetCountAdjustment>
        <workSkill>Crafting</workSkill> <!-- custom skill -->
        <workSkillLearnFactor>0</workSkillLearnFactor>
        <recipeUsers>
            <li>whtwl_TableGemcutting</li>
        </recipeUsers>
    </RecipeDef>

    <!-- SPHERE BASE -->
    <ThingDef Name="Sphere_Base" ParentName="ResourceBase" Abstract="True">
        <defName>whtwl_Sphere_Base</defName>
        <label>sphere</label>
        <description>A small gemstone encased in glass, used as currency on Rimshar. Can hold
            Stormlight.</description>
        <stackLimit>25</stackLimit>
        <tickerType>Normal</tickerType>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
        <tradeability>All</tradeability>
        <statBases>
            <Mass>0.008</Mass>
        </statBases>
        <alwaysHaulable>true</alwaysHaulable>
        <selectable>true</selectable>
        <possessionCount>40</possessionCount>
    </ThingDef>


    <!-- GEMSTONE WORKBENCHES-->
    <WorkGiverDef>
        <defName>DoBillsGemcut</defName>
        <label>make stuff with gems</label>
        <giverClass>WorkGiver_DoBill</giverClass>
        <workType>Crafting</workType>
        <priorityInType>90</priorityInType>
        <fixedBillGiverDefs>
            <li>whtwl_TableGemcutting</li>
        </fixedBillGiverDefs>
        <verb>stonecut</verb>
        <gerund>cutting gems at</gerund>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
        <prioritizeSustains>true</prioritizeSustains>
    </WorkGiverDef>

    <ThingDef ParentName="BenchBase">
        <defName>whtwl_TableGemcutting</defName>
        <label>gemcutters's table</label>
        <description>A work table with saws and chisels for cutting stone chunks into usable blocks.</description>
        <thingClass>Building_WorkTable_HeatPush</thingClass>
        <graphicData>
            <texPath>Things/Workbench/whtwl_Gemcutter</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(3.5,1.5)</drawSize>
            <shaderType>CutoutComplex</shaderType>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <staticSunShadowHeight>0.20</staticSunShadowHeight>
        <costStuffCount>75</costStuffCount>
        <costList>
            <Steel>30</Steel>
        </costList>
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
        </stuffCategories>
        <altitudeLayer>Building</altitudeLayer>
        <fillPercent>0.5</fillPercent>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <WorkToBuild>2000</WorkToBuild>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Cleanliness>-5</Cleanliness>
        </statBases>
        <size>(3,1)</size>
        <designationCategory>Production</designationCategory>
        <uiOrder>2300</uiOrder>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <surfaceType>Item</surfaceType>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
            <paintable>true</paintable>
        </building>
        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>ToolCabinet</li>
                </linkableFacilities>
            </li>
        </comps>
        <researchPrerequisites>
            <li>whtwl_GemCutting</li>
        </researchPrerequisites>
        <designationHotKey>Misc9</designationHotKey>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
    </ThingDef>
</Defs>